% layout 'default';
% title 'Welcome';

<table id="tm">
</table>

<div id="tb" style="height:auto">
    <a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-add',plain:true" onclick="append()">Append</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-remove',plain:true" onclick="removeit()">Remove</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-save',plain:true" onclick="accept()">Accept</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-undo',plain:true" onclick="reject()">Reject</a>
 	<a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-search',plain:true" onclick="getChanges()">GetChanges</a>
</div>

<script>
	var editIndex = undefined;

	function endEditing() {
		if(editIndex == undefined) { return true }
		if($('#tm').datagrid('validateRow', editIndex)) {
            var ed = $('#tm').datagrid('getEditor', {index:editIndex,field:'user'});
            var user_id = $(ed.target).combobox('getValue');
            var user_name = $(ed.target).combobox('getText');
            $('#tm').datagrid('getRows')[editIndex]['user_name'] = user_name;
			$('#tm').datagrid('endEdit', editIndex);
			editIndex = undefined;
			return true;
		}
		else {
			return false;
		}
	}

	function append() {
		if(endEditing()) {
			$('#tm').datagrid('appendRow', {id: -1 });
			editIndex = $('#tm').datagrid('getRows').length-1;
			$('#tm').datagrid('selectRow', editIndex)
						   .datagrid('beginEdit', editIndex);
		}
	}

	function accept() {
		var rowIndex = editIndex;
        var rows = $('#tm').datagrid('getChanges');
        console.log(rows);
		if(endEditing()) {
			$('#tm').datagrid('acceptChanges');
            rows.forEach(function(row, index) {
                if(null != row) {
                    // send new user to server
                    $.post('add_tm', row, function(data, status, xhr) {
                        // successfully send it to server.
                        // Check the response
                        console.log(status);
                        console.log(data);
                    }, "json");
                }
            });
            //$('#tm').datagrid('reload');
		}
	}

	function removeit() {
		if(editIndex != undefined)
        {
		    $('#tm').datagrid('cancelEdit', editIndex);
		    editIndex = undefined;
        }
        var row = $('#tm').datagrid('getSelected');
        if(null == row) { return }
        $.post('remove_user', row, function(data, status, xhr) {
            //Successfully send to server and received an answer
            console.log(status);
            console.log(data);
            $('#tm').datagrid('reload');
        }, "json");

	}

	function reject() {
		$('#tm').datagrid('rejectChanges');
	}

    function getChanges() {
        var rows = $('#tm').datagrid('getChanges');
        console.log(rows);
    }

	function onClickCell(index, field) {
		console.log("CLicked on cell " + field + " in row " + index);
		if(editIndex != index) {
			if(endEditing()) {
				$('#tm').datagrid('selectRow', index)
								.datagrid('beginEdit', index);
				var ed = $('#tm').datagrid('getEditor', {index:index,field:field});
                if(null != ed.target) {
				    ($(ed.target).data('textbox') ? $(ed.target).textbox('textbox') : $(ed.target)).focus();
                }
				editIndex = index;
			}
			else {
				$('#tm').datagrid('selectRow', editIndex);
			}
		}
	}

	$(document).ready(function(){
		$('#tm').datagrid({
			url: 'get_tm',
			method: 'GET',
			toolbar: '#tb',
			singleSelect: true,
			onClickCell: onClickCell,
			columns: [[
				{field:'id',title:'ID',width:100,hidden:true},
				{field:'date',title:'Date',width:300,editor:'datebox'},
				{field:'energy',title:'Energy',width:300,editor:{type:'numberbox',options:{min:0}}},
				{field:'distance',title:'Distance',width:300,editor:{type:'numberbox',options:{min:0,precision:2}}},
				{field:'user',title:'User',width:300,editor:{type:'combobox',options:{valueField:'user',textField:'user_name',method:'get',url:'get_users_for_combo',required:true}},
						formatter:function(value,row){
							return row.user_name;
						}
                }
			]]
		});
	});
</script>
